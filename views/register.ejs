<div class="wrapper text-center shadow p-5 border rounded-3">
  <a href="/"><i class="fas fa-user-secret fa-6x logo"></i></a>
  <h1 class="fw-bold">Register</h1>
          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST" class="needs-validation" novalidate>
            <div class="form-group">
              <input type="text" class="form-control form-control-lg" name="fullName" placeholder="Full Name" required>
            </div>
            <div class="form-group">
              <input type="email" class="form-control form-control-lg" name="username" placeholder="Email" required>
            </div>
            <div class="form-group">
              <input type="password" class="form-control form-control-lg" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-lg col-12 btn-dark my-3 text-center">Register</button>
          </form>
          <p class="text-center text-body-tertiary">Already have an account? Click <a href="/login">here</a> to login.</p>
          <a class="btn btn-block" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
